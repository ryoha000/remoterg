<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Ui.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Capture Target Selector">

    <Grid Padding="20" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Spacing="8">
            <TextBlock Text="キャプチャ対象のウィンドウを選択してください" FontSize="18" />
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="再読み込み" Click="OnRefreshClick" />
                <Button Content="hostd を起動" Click="OnStartHostdClick"
                        IsEnabled="{x:Bind HasSelection, Mode=OneWay}" />
            </StackPanel>
        </StackPanel>

        <ListView Grid.Row="1"
                  ItemsSource="{x:Bind Windows}"
                  SelectedItem="{x:Bind SelectedWindow, Mode=TwoWay}"
                  SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:WindowEntry">
                    <StackPanel>
                        <TextBlock Text="{x:Bind Title}" FontWeight="Bold" />
                        <TextBlock Text="{x:Bind DetailText}" FontSize="12" Opacity="0.8" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock Grid.Row="2" Text="{x:Bind StatusMessage, Mode=OneWay}" Opacity="0.8" />
    </Grid>
</Window>
