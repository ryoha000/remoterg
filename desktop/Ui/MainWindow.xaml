<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Ui.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Capture Target Selector">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Pivot Grid.Row="0" Title="Select Capture Target">
            <PivotItem Header="Applications">
                <GridView ItemsSource="{x:Bind Windows}"
                          SelectedItem="{x:Bind SelectedWindow, Mode=TwoWay}"
                          SelectionMode="Single"
                          Padding="12">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="local:WindowEntry">
                            <Grid Width="200" Height="140" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="12">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <!-- Icon/Thumbnail placeholder -->
                                <Image Source="{x:Bind IconSource, Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform" MaxHeight="64" MaxWidth="64" Grid.Row="0" Margin="0,0,0,12"/>
                                <TextBlock Grid.Row="0" Text="ðŸªŸ" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                           Visibility="{x:Bind IconVisibility, Mode=OneWay}" />
                                
                                <StackPanel Grid.Row="1">
                                    <TextBlock Text="{x:Bind Title}" Style="{ThemeResource BodyStrongTextBlockStyle}" TextTrimming="CharacterEllipsis" ToolTipService.ToolTip="{x:Bind Title}" />
                                    <TextBlock Text="{x:Bind ClassName}" Style="{ThemeResource CaptionTextBlockStyle}" Opacity="0.6" TextTrimming="CharacterEllipsis" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </PivotItem>
            
            <PivotItem Header="Screens">
                <GridView ItemsSource="{x:Bind Screens}"
                          SelectedItem="{x:Bind SelectedScreen, Mode=TwoWay}"
                          SelectionMode="Single"
                          Padding="12">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="local:ScreenEntry">
                            <Grid Width="240" Height="160" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="12">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Background="{ThemeResource SystemControlBackgroundChromeBlackMediumBrush}" CornerRadius="4" Margin="0,0,0,12">
                                    <TextBlock Text="ðŸ–¥ï¸" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <StackPanel Grid.Row="1">
                                    <TextBlock Text="{x:Bind DeviceName}" Style="{ThemeResource BodyStrongTextBlockStyle}" TextTrimming="CharacterEllipsis" />
                                    <TextBlock Text="{x:Bind Resolution}" Style="{ThemeResource CaptionTextBlockStyle}" Opacity="0.6" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </PivotItem>
        </Pivot>

        <!-- Footer Actions -->
        <Grid Grid.Row="1" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" Padding="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <StackPanel Orientation="Vertical" Grid.Column="0" VerticalAlignment="Center">
                 <TextBlock Text="{x:Bind StatusMessage, Mode=OneWay}" Style="{ThemeResource CaptionTextBlockStyle}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="12" Grid.Column="1">
                <Button Content="Refresh" Click="OnRefreshClick" />
                <Button Content="Go Live" Style="{ThemeResource AccentButtonStyle}" Click="OnStartHostdClick"
                        IsEnabled="{x:Bind CanStart, Mode=OneWay}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
